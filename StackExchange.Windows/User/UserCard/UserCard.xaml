<UserControl
    x:Class="StackExchange.Windows.User.UserCard.UserCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StackExchange.Windows.User.UserCard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <!--<UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary Source="../../Resources/Light/Light.xaml" x:Key="Light"/>
                <ResourceDictionary Source="../../Resources/Dark/Dark.xaml" x:Key="Dark"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>-->

    <Grid x:Name="UserCardGrid" 
          Style="{StaticResource UserCardBackground}">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="18" Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="130"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="OwnerImage"
               Grid.Row="1"
               Grid.Column="0"
               Grid.RowSpan="3"
               Margin="0,0,8,0"
               Stretch="Fill"
               Width="32"
               Height="32"/>

        <TextBlock x:Name="PostedOn"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   TextAlignment="Left"
                   FontSize="12"/>

        <TextBlock x:Name="Owner"
                   Grid.Row="1"
                   Grid.Column="1"
                   TextAlignment="Left"
                   FontSize="12"/>

        <StackPanel x:Name="Badges"
                    Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal">
            <TextBlock x:Name="Reputation"
                       Text="3280"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Margin="0,0,4,0" />
            <Ellipse x:Name="BronzeDot"
                     Fill="#af7626"
                     Stroke="#af7626"
                     Height="8"
                     Width="8"
                     VerticalAlignment="Center"/>
            
            <TextBlock x:Name="Bronze"
                       Text="8"
                       FontSize="12"
                       FontWeight="Light"
                       Margin="2,0,4,0"/>
            
            <Ellipse x:Name="SilverDot"
                     Fill="#bababa"
                     Stroke="#bababa"
                     Height="8"
                     Width="8"
                     VerticalAlignment="Center"/>

            <TextBlock x:Name="Silver"
                       Text="8"
                       FontSize="12"
                       FontWeight="Light"
                       Margin="2,0,4,0"/>
            
            <Ellipse x:Name="GoldDot"
                     Fill="#ffe438"
                     Stroke="#ffe438"
                     Height="8"
                     Width="8"
                     VerticalAlignment="Center"/>

            <TextBlock x:Name="Gold"
                       Text="8"
                       FontSize="12"
                       FontWeight="Light"
                       Margin="2,0,4,0"/>
        </StackPanel>
    </Grid>
</UserControl>
