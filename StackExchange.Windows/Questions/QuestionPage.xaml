<Page
    x:Class="StackExchange.Windows.Questions.QuestionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StackExchange.Windows.Questions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:searchBox="using:StackExchange.Windows.Common.SearchBox"
    xmlns:siteSelector="using:StackExchange.Windows.Common.SiteSelector"
    mc:Ignorable="d">

    <Grid x:Name="PageGrid"
          Padding="8"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer x:Name="ScrollableContent"
                      Grid.Column="0"
                      Grid.Row="0">
            <StackPanel x:Name="MainContent"
                        Orientation="Vertical">
                <TextBlock x:Name="QuestionTitle"
                           Style="{StaticResource TitleTextBlockStyle}"/>

                <Line HorizontalAlignment="Stretch"
                      Margin="50, 10, 50, 10" 
                      Stroke="Black" 
                      Stretch="Fill"
                      StrokeThickness="4" />

                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="QuestionScore"
                               FontSize="24"
                               Margin="8,24,8,0"/>

                    <WebView x:Name="QuestionBody"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             Width="900"
                             Margin="0,0,0,8"
                             DOMContentLoaded="QuestionBody_OnDOMContentLoaded"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <CommandBar x:Name="CommandBar"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="-8">
            <CommandBar.Content>
                <StackPanel x:Name="CommandBarContent"
                            Orientation="Horizontal">
                    <searchBox:QuestionSearchBox/>
                    <siteSelector:SiteSelector/>
                </StackPanel>
            </CommandBar.Content>
        </CommandBar>
    </Grid>
</Page>
