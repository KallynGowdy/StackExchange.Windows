<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Common/Buttons.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Duration x:Key="VoteButtonColorDuration">0:0:0.2</Duration>
    <Style x:Key="VoteButton" TargetType="Button" BasedOn="{StaticResource VoteButtonCommon}">
    </Style>

    <Color x:Key="UpvoteButtonDefaultColor">Transparent</Color>
    <Color x:Key="UpvoteButtonHoverColor">Aquamarine</Color>
    <Style x:Key="UpvoteButton" TargetType="Button" BasedOn="{StaticResource UpvoteButtonCommon}">
    </Style>

    <Color x:Key="DownvoteButtonNormalColor">Transparent</Color>
    <Color x:Key="DownvoteButtonHoverColor">IndianRed</Color>
    <Style x:Key="DownvoteButton" TargetType="Button" BasedOn="{StaticResource VoteButtonCommon}">
    </Style>
</ResourceDictionary>
