<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PostSeparatorCommon" TargetType="Line">
        <Setter Property="X1" Value="0"/>
        <Setter Property="X2" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0,8,0,16"/>
        <Setter Property="Stroke" Value="LightGray"/>
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>
    <Style x:Key="CommentSeparatorCommon" TargetType="Line" BasedOn="{StaticResource PostSeparatorCommon}">
        <Setter Property="Stroke" Value="#dddddd"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>
</ResourceDictionary>
